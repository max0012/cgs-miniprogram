<view class='ticket-container'>
    <scroll-view scroll-y bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
        <!--Tab布局-->
        <view class='title'>
            <view wx:for="{{data_list}}" wx:for-index="listIndex">
                <view class="{{listIndex == currentIndex ? 'title-sel-selected' : 'title-sel'}}" data-id="{{item.id}}" bindtap='titleClick' data-idx='{{listIndex}}'>
                    <text>{{item.name}}</text>
                    <hr class="line-style" />
                </view>
            </view>
        </view>


        <!--内容布局-->
        <swiper class='swiper' bindchange='pageChange' current='{{currentIndex}}'>
            <view>推荐产品</view>
            <view wx:for="{{detail.relationPageProducts}}" wx:for-item="details" class='record-item'>
                <swiper-item class='swiper'>
                    <view class='name'>
                        <view bindtap="detailClick">
                            <view src="{{details.coverUrl}}"></view>
                            <view>
                                <view>{{details.name}}</view>
                                <view>
                                    佣金：{{details.commissionText}}
                                    <button>马上营销</button>
                                </view>
                            </view>
                        </view>
                    </view>
                </swiper-item>
            </view>
        </swiper>
    </scroll-view>
</view>