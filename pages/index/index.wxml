<view class="container">
    <view class="search">
        <view class="searchItem">
            <image src="../../assets/search.png" />
            <input bindinput="bindKeyInput" placeholder="搜索" confirm-type="search"></input>
        </view>
    </view>
    <view class="tab-list">
        <view wx:for="{{dataList}}" wx:for-index="listIndex" wx:key="index">
            <view class="{{listIndex == currentIndex ? 'title-sel-selected' : 'title-sel'}}" bindtap="titleClick" data-id="{{item.id}}" data-idx="{{listIndex}}">
                <text>{{item.name}}</text>
                <hr class="line-style" />
            </view>
        </view>
    </view>
    <!--内容布局-->
    <swiper class="swiper" circular="true" duration="200" current="{{currentIndex}}" bindchange="pageChange" style="height: {{windowHeight}}px;">
        <swiper-item wx:for="{{dataList}}" wx:for-index="listIndex" wx:key="index">
            <view class="recommend">
                <view class="title">
                    <text>推荐产品</text>
                </view>
                <view class="list">
                     <view class="product flex-wrp" wx:for="{{pageDetails.relationPageProducts}}" wx:key="index">
                        <view class="img flex-wrp">
                            <image src="{{item.product.coverUrl}}" mode="aspectFit"></image>
                        </view>
                        <view class="info flex-wrp">
                            <view class="desc">
                                <text>{{item.product.name}}</text>
                            </view>
                            <view class="opt flex-wrp">
                                <view class="commission">
                                    <text>佣金：{{item.product.commissionText}}</text>
                                </view>
                                <button class="marketing-btn">马上营销</button>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </swiper-item>
    </swiper>
</view>