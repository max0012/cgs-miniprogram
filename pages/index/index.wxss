.search {
    width: 100%;
    display: flex;
    flex-direction: row;
    height: 88rpx;
    background: #fff;
    align-items: center;
}

.searchItem {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 65rpx;
    margin: 0 30rpx;
    border-radius: 30rpx;
    background: #F5F5F5;
}

.searchItem image {
    height: 32rpx;
    width: 32rpx;
    align-self: center;
    margin: 0 20rpx;
}

.searchItem input {
    flex: 1;
    font-size: 28rpx;
    margin-top: 13rpx;
}

.tab-list {
    width: 100%;
    height: 75rpx;
    background: white;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.title-sel {
    color: #999999;
    font-size: 26rpx;
}

.title-sel .line-style {
    background: #fff;
    height: 6rpx;
    width: 40rpx;
    position: relative;
    margin-top: 10rpx;
}

.title-sel-selected {
    color: #564F5F;
    font-size: 26rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.title-sel-selected .line-style {
    background: #564F5F;
    height: 5rpx;
    width: 30rpx;
    position: absolute;
    top: 158rpx;
}

.swiper {
    width: 100%;
    margin-top: 15rpx;
}

.swiper swiper-item {
    height: auto !important;
    background-color: #fff;
}

.recommend {
    margin: 30rpx;
}

.recommend .list .product {
    height: 165rpx;
    margin-top: 30rpx;
}

.recommend .list .product .img {
    flex: 2;
    overflow: hidden;
    align-items: center;
    margin-right: 20rpx;
    border-radius: 8rpx;
}

.recommend .list .product image {
    background-size: cover;
    width: 100%;
}

.recommend .list .product .info {
    flex: 3;
    flex-wrap: wrap;
    align-content: space-between;
}

.recommend .list .product .desc {
    font-size: 26rpx;
    line-height: 32rpx;
    letter-spacing: 1rpx;
    margin-top: 5rpx;
}

.recommend .list .product .opt {
    width: 100%;
    height: 50rpx;
    align-items: center;
    justify-content: space-between;
}

.recommend .list .product .commission {
    color: #EE0401;
    font-size: 25rpx;
    font-weight: 300;
}

.recommend .list .product .marketing-btn {
    margin: 0;
    padding: 0;
    width: 140rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 25rpx;
    font-weight: 300;
    border-radius: 50rpx;
    background-color: #EF4B33;
    color: #fff;
}

.recommend .list .product .marketing-btn::after {
    border: none;
}