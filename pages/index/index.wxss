.search {
    width: 100%;
    display: flex;
    flex-direction: row;
    height: 88rpx;
    background: #fff;
    align-items: center;
}

.searchItem {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 65rpx;
    margin: 0 30rpx;
    border-radius: 30rpx;
    background: #F5F5F5;
}

.searchItem image {
    height: 32rpx;
    width: 32rpx;
    align-self: center;
    margin: 0 20rpx;
}

.searchItem input {
    flex: 1;
    font-size: 28rpx;
    margin-top: 13rpx;
}

.tab-list {
    width: 100%;
    height: 75rpx;
    background: white;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.title-sel {
    color: #999999;
    font-size: 28rpx;
}

.title-sel .line-style {
    background: #fff;
    height: 6rpx;
    width: 40rpx;
    position: relative;
    margin-top: 10rpx;
}

.title-sel-selected {
    color: #564F5F;
    font-size: 28rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.title-sel-selected .line-style {
    background: #564F5F;
    height: 5rpx;
    width: 30rpx;
    position: absolute;
    top: 158rpx;
}

.swiper {
    width: 100%;
    background-color: #fff;
    margin-top: 15rpx;
}

.recommend {
    margin: 30rpx;
}

.recommend .list {
    margin-top: 30rpx;
}