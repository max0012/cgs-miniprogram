<view>
    <!-- type=1:从下单页面过来，需要加上点击事件 -->
    <view wx:if="{{type == 1 }}">
        <view wx:for="{{coupons}}" wx:key="item" bindtap="clickCoupon" data-item="{{item}}">
            <view>
                <text>全场通用</text>
                <text>满{{item.overPriceCanUse}}可用</text>
            </view>
            <view>
                <text>{{item.faceValue}}元</text>
                <text>优惠券</text>
            </view>
            <view>
                有效期：{{item.startTime}} - {{item.endTime}}
            </view>
        </view>
    </view>
    <view wx:if="{{type != 1}}">
        <view wx:for="{{coupons}}" wx:key="item">
            <view>
                <text>全场通用</text>
                <text>满{{item.overPriceCanUse}}可用</text>
            </view>
            <view>
                <text>{{item.faceValue}}元</text>
                <text>优惠券</text>
            </view>
            <view>
                有效期：{{item.startTime}} - {{item.endTime}}
            </view>
        </view>
    </view>

</view>