.code {
    width: 100%;
    background-color: #fff;
}

.tips .title {
    flex: 2;
    margin-top: 100rpx;
    margin-left: 50rpx;
    text-align: left;
    font-size: 40rpx;
}

.tips .title .msg {
    display: block;
    color: #8C8C8C;
    font-size: 31rpx;
    margin-top: 20rpx;
}

.tips .bg image {
    width: 100%;
    height: 250rpx;
    position: relative;
    right: -20rpx;
}

.code-number input {
    color: #000;
    height: 70rpx;
    margin: 30rpx 50rpx;
    border-bottom: 1px solid #eaeaea;
    opacity: 0.5;
}

.code-number .placeholder {
    color: #c7c7cc;
    font-size: 30rpx;
    font-weight: 300;
}

.logon-btn {
    margin: 30rpx 50rpx;
}

.logon-btn button {
    height: 90rpx;
    line-height: 90rpx;
    font-size: 33rpx;
    font-weight: 300;
    border-radius: 55rpx;
    color: #fff;
    background-color: #5678f6;
}

.logon-btn button::after {
    border: none;
}
