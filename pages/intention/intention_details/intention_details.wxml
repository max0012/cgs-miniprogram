<view>
    <view wx:if="{{detail.flag == 1}}">
        <text>客户经理：{{detail.senderManagerName}} <button>联系客户经理</button></text>
    </view>
    <view class="divLine2"></view>
    <view>
        <text wx:if="{{status === 'Submitted'}}">状态：已提交</text>
        <text wx:if="{{status === 'Replied'}}">状态：营销中</text>
        <text wx:if="{{status === 'Closed'}}">状态：已关闭</text>
        <text>提交时间：{{detail.creationTime}}</text>
    </view>
    <view class="divLine2"></view>
    <view>
        <image src="{{detail.coverUrl}}"></image>
        <text>{{detail.name}}</text>
        <text>盈利佣金：{{detail.commissionText}}</text>
    </view>
    <view class="divLine2"></view>
    <view>
        <view>客户名称：{{detail.customerName}}
            <button wx:if="{{detail.flag == 0 && status === 'Submitted' }}" bindtap="closeIntention" data-id="{{detail.id}}">关闭意向</button>
            <button wx:if="{{detail.flag == 1}}">联系客户</button>
        </view>
        <view class="divLine"></view>
        <view>联系电话：{{detail.customerMobile}}</view>
        <view>数量/金额：{{detail.quantity}}</view>
        <view>备注：{{detail.description}}</view>
    </view>
    <view class="divLine2"></view>
    <view wx:if="{{dialogs}}">
        <view wx:for="{{dialogs}}">
            <view>
                <image src="detail.receiverManagerAvatarUrl"></image>
                <view wx:if="{{detail.flag == 0}}">
                    产品顾问-{{detail.receiverManagerName}}
                </view>
                <view wx:if="{{detail.flag == 1}}">
                    我的回复
                </view>
                <view>
                    {{item.creationTime}}
                </view>
                <view wx:if="{{item.content}}">
                    {{item.content}}
                </view>
                <view wx:if="{{!item.content}}">
                    暂无回复
                </view>
            </view>
            <view>
                <image src="detail.senderManagerAvatarUrl"></image>
                <view wx:if="{{detail.flag == 0}}">
                    我的回复
                </view>
                <view wx:if="{{detail.flag == 1}}">
                    客户经理-{{detail.senderManagerName}}
                </view>
                <view wx:if="{{item.reply}}">
                    {{item.reply}}
                </view>
                <view wx:if="{{!item.reply}}">
                    暂无回复
                </view>
            </view>
        </view>
    </view>
    <view>
        <input placeholder="请输入评论内容"></input>
        <button bindtap="commitDialog">发表</button>
    </view>
</view>