<view class='ticket-container'>
    <scroll-view scroll-x="true" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
        <!--Tab布局-->
        <view class='title'>
            <view wx:for="{{data_list}}" wx:for-index="listIndex">
                <view class="{{listIndex == currentIndex ? 'title-sel-selected' : 'title-sel'}}" data-status="{{item.paramData}}" bindtap='titleClick' data-idx='{{listIndex}}'>
                    <text>{{item.name}}</text>
                    <hr class="line-style" />
                </view>
            </view>
        </view>


        <!--内容布局-->
        <swiper class='swiper' bindchange='pageChange' current='{{currentIndex}}'>
            <!-- 有几个tab项就循环出几个swiper-item  -->
            <view wx:for="{{data_list}}">
                <swiper-item class='swiper'>
                    <view wx:if="{{!orders}}">
                        暂无数据
                    </view>
                    <view wx:if="{{orders}}" wx:for="{{orders}}" wx:for-item="order" class='record-item' >
                        <view class='name'>
                            <view bindtap="orderClick" data-id="{{order.id}}">
                                <view>
                                    <text>业务单号：{{order.orderNumber}}</text>
                                    <text wx:if="{{order.status === 'BeforePayment'}}">待付款</text>
                                    <text wx:elif="{{order.status === 'BeforeShipping'}}">待发货</text>
                                    <text wx:elif="{{order.status === 'BeforeReceive'}}">待收货</text>
                                    <text wx:else="{{order.status === 'Confirm'}}">已签收</text>
                                </view>
                                <view>
                                    <image src="{{order.product.coverUrl}}"></image>
                                    <view>{{order.product.name}}</view>
                                    <view>
                                        数量：{{order.quantity}}件
                                    </view>
                                    <view>
                                        {{order.unitPrice}}元
                                    </view>
                                </view>
                                <view>
                                    <view>
                                        订单总额：￥{{order.totalPrice}}
                                    </view>
                                    <view>
                                        <button>去支付</button>
                                    </view>
                                </view>
                            </view>
                        </view>
                    </view>
                </swiper-item>
            </view>
        </swiper>
    </scroll-view>
</view>