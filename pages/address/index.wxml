
<view>
    <text bindtap="addAddress">添加新地址</text>
</view>

<view wx:if="{{addressList}}">
    <view wx:for="{{addressList}}" wx:key="item">
        <view>
            <text>{{item.name}}</text>
            <text>{{item.mobile}}</text>
        </view>
        <view>
            <text>{{item.province}}</text>
            <text>{{item.city}}</text>
            <text>{{item.district}}</text>
            <text>{{item.address}}</text>
        </view>
        <view>
            <text bindtap="updateAddress" data-item="{{item}}">编辑</text>
        </view>
    </view>
</view>