<view>
    <form class="page__bd" bindsubmit="formSubmit" bindreset="formReset">
        <view>
            <text>收货人</text>
            <input placeholder="请输入收货人" value="{{address.name}}" name="name"></input>
        </view>
        <view>
            <text>手机号码</text>
            <input placeholder="请输入手机号码" value="{{address.mobile}}" name="mobile"></input>
        </view>
        <view>
            <view class="input">
                <view>收货人地址</view>
                <input placeholder="请选择" value="{{province}}-{{city}}-{{county}}" focus="{{focus}}" bindtap="open" data-type="none" name="pro"/>
            </view>

            <view wx:if="{{condition}}" class="citypicker">
                <picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;" value="{{value}}" bindchange="bindChange" class="citybody">
                    <view class="cityheader">
                        <view bindtap="open" data-type="cancel" class="city-cancel">取消</view>
                        <view bindtap="open" data-type="open" class="city-true">确定</view>
                    </view>
                    <picker-view-column>
                        <view wx:for="{{provinces}}" wx:key="item" style="line-height: 50px;padding-left:10px;">{{item}}</view>
                    </picker-view-column>
                    <picker-view-column>
                        <view wx:for="{{citys}}" wx:key="item" style="line-height: 50px;padding-left:10px;">{{item}}</view>
                    </picker-view-column>
                    <picker-view-column>
                        <view wx:for="{{countys}}" wx:key="item" style="line-height: 50px;padding-left:10px;">{{item}}</view>
                    </picker-view-column>
                </picker-view>
            </view>
        </view>
        <view>
            <text>详细地址</text>
            <input placeholder="请输入详细地址" value="{{address.address}}" name="address"></input>
        </view>
        <!-- 新增 -->
        <view wx:if="{{type == 1}}">
            <button form-type="submit">保存</button>
        </view>
        <!-- 修改 -->
        <view wx:if="{{type == 2}}">
            <button bindtap="deleteAddress" data-id="{{address.id}}">删除</button>
            <button data-id="{{address.id}}" form-type="submit">保存</button>
        </view>
    </form>
</view>