<!--购物页列表-->
<view>
    <view wx:for="{{data_list}}">
        <view class="list" data-id="{{item.id}}" bindtap="divClick">
            <view calss="mainImg">
                <image src=" {{item.coverUrl}}" />
            </view>
            <view>
                <image src=" {{item.productBrand.coverUrl}}" />
                <text>{{item.productBrand.name}}</text>
            </view>
            <view>
                <text>{{item.name}}</text>
            </view>
            <view>
                <text>营销成功：{{item.countSale}}</text>
            </view>
            <view>
                <text>{{item.intro}}</text>
            </view>
            <!--              通过类型判断如何显示                 --->
            <!-- Tuiguang, Daikuan, Simu, Baoxian, Gouwu, Chexian  -->
            <view wx:if="{{data_type==='Gouwu'}}">
                <view class="div3">
                    <view>
                        <text class="redText">{{item.upperPrice}}元</text>
                    </view>
                    <text>商品价格</text>
                </view>
                <view class="div3">
                    <view>
                        <text class="redText">{{item.commissionText}}</text>
                    </view>
                    <text>营销佣金</text>
                </view>
                <view class="div3">
                    <button class="btn">立即营销</button>
                </view>
            </view>
            <!--------------------   Simu私募类型  -------------------------->
            <view wx:if="{{data_type==='Simu'}}">
                <view class="div3">
                    <view>
                        <text class="redText">{{item.earning}}</text>
                    </view>
                    <text>累计收益</text>
                </view>
                <view class="div3">
                    <view>
                        <text class="redText">{{item.netWorth}}</text>
                    </view>
                    <text>最新净值{{item.netWorthTime}}</text>
                </view>
                <view class="div3">
                    <view>
                        <text class="redText">{{item.commissionText}}</text>
                    </view>
                    <text>营销佣金</text>
                </view>
            </view>
            <!----------------------- Tuiguang推广类型  -------------------------->
            <view wx:if="{{data_type==='Tuiguang'}}">
                <view class="div3">
                    <view>
                        <text class="redText">{{item.price}}</text>
                    </view>
                    <text>商品价格</text>
                </view>
                <view class="div3">
                    <view>
                        <text class="redText">{{item.commissionText}}</text>
                    </view>
                    <text>营销佣金</text>
                </view>
                <view class="div3">
                    <button class="btn">立即营销</button>
                </view>
            </view>
        </view>
    </view>
</view>