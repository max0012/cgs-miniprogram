<!--购物页列表-->
<view>
  <view wx:for="{{list}}">
      <view class="list" data-id="{{item.id}}" bindtap="divClick">
        <view calss="mainImg">
          <image src=" {{item.coverUrl}}" />
        </view>
        <view>
          <image src=" {{item.productBrand.coverUrl}}" />
          <text>{{item.productBrand.name}}</text>
        </view>
        <view>
          <text>{{item.name}}</text>
        </view>
        <view>
          <text>营销成功：{{item.countSale}}</text>
        </view>
        <view>
          <text>{{item.intro}}</text>
        </view>
        <view>
          <view class="div3">
            <view><text class="redText">{{item.upperPrice}}元</text></view>
            <text>商品价格</text>
          </view>
          <view class="div3">
            <view><text class="redText">登录后查看</text></view>
            <text>营销佣金</text>
          </view>
          <view class="div3">
            <button class="btn">立即营销</button>
          </view>
        </view>
      </view>
  </view>
</view>
