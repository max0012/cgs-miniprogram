.pageBody .container {
	width: 100%;
}

.pageBody swiper {
	width: 100%;
}

.pageBody .img {
	border-top: 1px solid #EDEDED;
	border-bottom: 1px solid #EDEDED;
	width: 100%;
}

.product_desc {
	padding: 30rpx;
}

.product_desc .company {
	display: flex;
	justify-content: flex-start;
	align-items: center;
}

.product_desc .company .logo {
	width: 46rpx;
	height: 16rpx;
}

.product_desc .company .company_name {
	margin-left: 24rpx;
	color: #ADADAD;
	font-size: 26rpx
}

.product_desc .prd_title {
	margin: 24rpx 0;
	font-size: 35rpx;
	font-weight: bold;
	font-family: "Microsoft YaHei";
}

.product_desc .prd_sale_count {
	color: #B0A08C;
	font-size: 22rpx;
	border: 1rpx solid #9E8D78;
	padding: 8rpx 16rpx 12rpx 16rpx;
	display: inline-block;
	border-radius: 10rpx;
}

.product_desc .prd_intro {
	background-color: #F8F8F8;
	border-radius: 5rpx;
	margin-top: 28rpx;
	padding: 20rpx;
	color: #ADADAD;
	font-size: 26rpx;
}

/*分割线样式*/
.pageBody .divLine {
	background: rgb(224, 224, 222);
	width: 100%;
	height: 1rpx;
}

/*分割线样式2*/
.pageBody .divLine2 {
	background: rgb(224, 224, 222);
	width: 100%;
	height: 5rpx;
}

