} */


/*使屏幕变暗  */
.pageBody .commodity_screen {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	background: #000;
	opacity: 0.2;
	overflow: hidden;
	z-index: 1000;
	color: #fff;
}

/*对话框 */
.pageBody .commodity_attr_box {
	height: 300rpx;
	width: 100%;
	overflow: hidden;
	position: fixed;
	bottom: 0;
	left: 0;
	z-index: 2000;
	background: #fff;
	padding-top: 20rpx;
}

/*主容器*/
.pageBody .stepper {
	width: 80px;
	height: 26px;
	/*给主容器设一个边框*/
	border: 1px solid #ccc;
	border-radius: 3px;
	margin: 0 auto;
}

/*加号和减号*/
.pageBody .stepper text {
	width: 19px;
	line-height: 26px;
	text-align: center;
	float: left;
}

/*数值*/
.pageBody .stepper input {
	width: 40px;
	height: 26px;
	float: left;
	margin: 0 auto;
	text-align: center;
	font-size: 12px;
	/*给中间的input设置左右边框即可*/
	border-left: 1px solid #ccc;
	border-right: 1px solid #ccc;
}

/*普通样式*/
.pageBody .stepper .normal {
	color: black;
}

/*禁用样式*/
.pageBody .stepper .disabled {
	color: #ccc;
}

.operation_buttons {
	background-color: #fff;
	width: 718rpx;
	position: fixed;
	bottom: 0;
	left: 0;
	padding: 16rpx;
	display: flex;
	justify-content: space-between;
	text-align: center;
}

.btn_opt {
	width: 44.5%;
	border: 1rpx solid #CCCCCC;
	padding: 20rpx 14rpx 24rpx 14rpx;
	border-radius: 8rpx;
	font-size: 32rpx;
	text-decoration: underline;
	color: #fff;
	font-family: "Microsoft YaHei";
}

.btn_trick {
	background-color: #D76F60;
}

.btn_flow {
	background-color: #59C396;
}
